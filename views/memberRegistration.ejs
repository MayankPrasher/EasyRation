<%- include('./store-header.ejs') %>
<div class="user-registration-card-container">
    <% if(errorMessage){ 
        %>
        <span class="user-message user-message--error"><%= errorMessage %></span>
        <%}%>
    <!-- <form class="pin-card-form"> -->
    <div class="user-registration-card mt-3">
    <div class="user-registration-card-header text-center"id="pin-card-header">
        <h3 class="mt-3" id="pin-heading"></h3>
    </div>
    <form action="/app/memberRegistration" method="POST" style="width: 100%;height: 100%;">
    <div class="registration-card">
        <div class="member-input-container" id="member-container" style="overflow-y: scroll;">
            <input type="hidden" id="member_quantity" value="<%=member_quantity%>"class="form-control" name="member_quantity">
            <input type="hidden" id="user_id" value="<%=user_id%>"class="form-control" name="user_id">
        </div>
        <div class="text-center mt-4"> <input class="btn btn-primary" type="submit"></div>
    </div>
</form>
    </div>
</div>
</div>
</div>
</body>

<script>
    
    var member_quantity = document.getElementById("member_quantity").value;
    // let html = 
    for(let i =1 ; i<=member_quantity;i++){
        document.getElementById("member-container").innerHTML += '<span> Member '+i+'</span><div class="member-input"><input type="number" name="member" class="form-control me-2" placeholder="Enter Aadhar Card Number"><input type="text" name="member_name" class="form-control"placeholder="Enter Member Name(as per Aadhar Card)"></div>';
    }
    var i = 0;
         var txt = 'Member Registration'; 
         var speed = 50; 
    
        function typing() {
        if (i < txt.length) {
        document.getElementById("pin-heading").innerHTML += txt.charAt(i);
        i++;
        setTimeout(typing, speed);
      }
      
    }
    
    window.onload = typing();
    
    
    </script>
</html>